<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10sp"
    tools:context="org.sci.rhis.fwc.ClientIntroFragment"
    android:orientation="vertical"
    android:background="@drawable/fragmentborder"
    android:id = "@+id/clients_intro_parent_layout">

    <LinearLayout
        android:id="@+id/client_intro_layout"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/client_intro_title"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:layout_margin="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/rowHeading">

            <Button android:id="@+id/buttonEditNRC"
                android:text="EDIT"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:background="@drawable/button_style"
                android:onClick="editNRC"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/TextViewClient_info_tab"
                android:gravity="center"
                android:text="@string/ClientsIntroFragment"
                android:layout_width="fill_parent"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/health_id"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/name_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="1sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/layoutbordersimple"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewClient_name"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/ClientsName"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Client_name"
                style="@style/styleEdittext"
                android:layout_width="422sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/edittext_round"
                android:enabled="false"
                android:ellipsize="start"
                android:focusable="false"
                android:inputType="textNoSuggestions"
                android:paddingLeft="2sp"
                android:textSize="20sp" />

            
        </LinearLayout>
        <LinearLayout
            android:id="@+id/clients_sex_layout"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="1sp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsSex"
                android:text="@string/ClientsSex"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>


            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="textNoSuggestions"
                android:textSize="20sp"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Sex"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                />

            <TextView
                android:id="@+id/TextViewClientsAge"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:text="@string/ClientsAge"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Clients_Age"
                style="@style/styleEdittext"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/edittext_round"
                android:ellipsize="start"
                android:inputType="text"
                android:paddingLeft="2sp"
                android:textSize="20sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/Clients_AgeReal"
                style="@style/styleEdittext"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/edittext_round"
                android:ellipsize="start"
                android:inputType="text"
                android:paddingLeft="2sp"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/husband_dist"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="1sp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewFatherName"
                android:text="@string/ClientsFather"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>


            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="textNoSuggestions"
                android:textSize="20sp"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Father"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                />

            <TextView
                android:layout_marginLeft="5sp"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:id="@+id/TextViewClientsMother"
                android:text="@string/ClientsMother"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Mother"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fatherMotherNameLayout"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="1sp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsHusband"
                android:text="@string/ClientsHusband"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>


            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="textNoSuggestions"
                android:textSize="20sp"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Husband"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                />
            <TextView
                android:layout_marginLeft="5sp"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsDist"
                android:text="@string/ClientsDist"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_District"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/upazila_union"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="1sp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/ClientsUpazila"
                android:text="@string/ClientsUpazila"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Upazila"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                />
            <TextView
                android:layout_marginLeft="5sp"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsUnion"
                android:text="@string/ClientsUnion"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>
            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Union"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/village_ward"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="1sp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsVillage"
                android:text="@string/ClientsVillage"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Village"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"/>

            <TextView
                android:layout_marginLeft="5sp"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsWordNo"
                android:text="@string/ClientsWordNo"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:inputType="number"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                android:id="@+id/Clients_Word_No"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/unite_house"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="1sp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsHouseNo"
                android:text="@string/ClientsHouseNo"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:inputType="number"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                android:id="@+id/Clients_House_No"/>

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsUniteNo"
                android:text="@string/ClientsUniteNo"
                android:layout_marginLeft="115sp"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:id="@+id/Clients_Unite_No"
                android:inputType="number"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/couple_mobile_no"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="1sp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">


            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsCoupleNo"
                android:text="@string/ClientsCoupleNo"
                android:layout_width="105sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_ElcoNo"
                android:inputType="number"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                />

            <TextView
                android:layout_marginLeft="115sp"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsMobileNo"
                android:text="@string/ClientsMobileNo"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:id="@+id/Clients_Mobile_no"
                android:paddingLeft="2sp"
                style="@style/styleEdittext"
                android:inputType="phone"
                android:padding="2dp"
                android:ems="10"
                android:maxLength="11"
                android:singleLine="true"
                android:minLines="1"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

