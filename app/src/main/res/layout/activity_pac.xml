                        android:textColor="@color/text_color"/>
                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/pacAdviceSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:layout_marginTop="10sp" />
                </LinearLayout>
                <LinearLayout android:id="@+id/pacRefer"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/pacReferLabel"
                        android:text="@string/refer"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/text_color"/>
                    <CheckBox
                        android:id="@+id/pacReferCheckBox"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pacReferCenterNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/pacReferCenterNameLabel"
                        android:text="@string/center_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/text_color"/>
                    <Spinner
                        android:id="@+id/pacReferCenterNameSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:layout_marginTop="10sp"
                        android:entries="@array/FacilityType_DropDown"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/pacReasonLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/pacReasonLabel"
                        android:text="@string/reason"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/text_color"/>

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/pacReasonSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:layout_marginTop="10sp"/>
                </LinearLayout>

                <LinearLayout android:id="@+id/pacButton"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <Button
                        android:id="@+id/pacSaveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"/>
                    <Button
                        android:id="@+id/pacEditButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:visibility="gone"
                        android:onClick="onClick"/>

                    <Button
                        android:id="@+id/pacDeleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/pacCancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>


