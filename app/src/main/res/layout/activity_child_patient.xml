                <LinearLayout android:id="@+id/childRefer"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">

                    <TextView
                        android:id="@+id/childReferLabel"
                        android:text="@string/refer"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <CheckBox
                        android:id="@+id/childReferCheckBox"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/childReferCenterNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/childReferCenterNameLabel"
                        android:text="@string/center_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:visibility="invisible"/>
                    <Spinner
                        android:id="@+id/childReferCenterNameSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/FacilityType_DropDown"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/childReasonLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/childReasonLabel"
                        android:text="@string/reason"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:visibility="invisible"/>
                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/childReasonSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/childButton" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <Button
                        android:id="@+id/childSaveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textSize="18sp"
                        android:onClick="onClick"
                        android:textColor="@color/text_color"/>
                    <Button
                        android:id="@+id/childEditButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>
                    <Button
                        android:id="@+id/childDeleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/childCancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>

