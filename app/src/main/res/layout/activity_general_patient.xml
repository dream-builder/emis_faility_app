<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:id="@+id/general_patient_activity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/rowHeading">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/gpBlanLabelLabel"
            style="@style/rowHeading"
            android:drawableLeft="@android:drawable/arrow_down_float"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gpBlanLabelLabel"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="সাধারণ রোগী সেবার ইতিহাস"
            android:id="@+id/gpHistoryLabel"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/modifyLastGPButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODIFY LAST SERVICE"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:visibility="invisible"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history_lay_gp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#F3F3F3">


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/gphistory_fragment"
            android:name="org.sci.rhis.fwc.GenericHistoryFragment"
            tools:layout="@layout/fragment_generic_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

