<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/nrc_layout"
        android:background="@drawable/fragmentborder"
        android:orientation="vertical"
        tools:context=".NRCActivity" >

        <LinearLayout
            android:id="@+id/client_intro_title"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/rowHeading">

            <TextView
                android:id="@+id/TextViewClient_info_tab"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="@string/ClientsIntroFragment"
                android:layout_width="fill_parent"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/layoutbordersimple"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewClient_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="2"
                android:text="@string/NRCClientsName"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Client_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="5"
                android:maxLength="35"
                android:background="@drawable/edittext_round"
                android:ellipsize="start"
                android:inputType="textCapCharacters"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ. "
                android:paddingLeft="2sp"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCFather"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsFather"
                android:text="@string/NRCClientsFather"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="textCapCharacters"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ. "
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:maxLength="35"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Father"
                android:paddingLeft="2sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCMother"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsMother"
                android:text="@string/NRCClientsMother"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text_color"/>


            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="textCapCharacters"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ. "
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:maxLength="35"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Mother"
                android:paddingLeft="2sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCAge"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsDate"
                android:text="@string/NRCClientsDOB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text_color"/>
            <EditText
                android:inputType="date"
                android:enabled="false"
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:hint="dd/mm/yyyy"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/EditTextClientsDate"/>

            <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
                <ImageButton
                    android:layout_marginTop="10sp"
                    android:id="@+id/DOBDatePicker"
                    android:layout_marginLeft="10sp"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:onClick="pickDate"
                    android:src="@drawable/calendar_icon"/>

            </RelativeLayout>

            <CheckBox
                android:id="@+id/CBAgeNotKnown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="2"
                android:layout_marginTop="10sp"
                android:paddingLeft="5dp"
                android:text="@string/NRCClientsDOBUnknown"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCAgeNext"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple"
            android:visibility="gone">

            <TextView
                android:textSize="20sp"
                android:id="@+id/TextViewClientsAge"
                android:text="@string/NRCClientsAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text_color"/>

            <EditText
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="3"
                android:paddingLeft="2dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/edittext_round"
                android:id="@+id/Clients_AgeYear"
                android:inputType="number"/>

            <TextView
                android:textSize="20sp"
                android:id="@+id/TextViewClientsAgeYear"
                android:text="@string/NRCClientsAgeYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color"/>

            <EditText
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:maxLength="2"
                android:paddingLeft="2dp"
                android:background="@drawable/edittext_round"
                android:id="@+id/Clients_AgeMonth"
                android:layout_marginRight="3dp"
                android:inputType="number"/>

            <TextView
                android:textSize="20sp"
                android:id="@+id/TextViewClientsAgeMonth"
                android:text="@string/NRCClientsAgeMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="2sp"
                android:textColor="@color/text_color"/>

            <EditText
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:maxLength="2"
                android:background="@drawable/edittext_round"
                android:id="@+id/Clients_AgeDay"
                android:layout_marginRight="3dp"
                android:paddingLeft="2dp"
                android:inputType="number"/>

            <TextView
                android:textSize="20sp"
                android:id="@+id/TextViewClientsAgeDate"
                android:text="@string/NRCClientsAgeDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dp"
                android:textColor="@color/text_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nrcBirthWeight"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple"
            android:padding="2sp"
            android:visibility="gone">
            <TextView
                android:id="@+id/nrcBirthWeightLabel"
                android:text="@string/born_weight"
                android:textSize="20sp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:id="@+id/nrcBirthWeightValue"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                android:paddingLeft="2sp"
                android:layout_width="120sp"
                android:maxLength="4"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCAgeSex"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple"
            >
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsSex"
                android:text="@string/NRCClientsSex"
                android:paddingRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:layout_marginBottom="2sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_spinner"
                android:id="@+id/ClientsSexSpinner"
                android:entries="@array/nrcClientsSex"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/layoutNRCMaritalStatus"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsMaritalStatus"
                android:text="@string/NRCClientsMaritalStatus"
                android:paddingRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:layout_marginBottom="2sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_spinner"
                android:id="@+id/ClientsMaritalStatusSpinner"
                android:entries="@array/marital_status"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutNRCHusband"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsHusband"
                android:text="@string/ClientsHusband"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text_color"/>


            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="textCapCharacters"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ. "
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:maxLength="35"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Husband"
                android:paddingLeft="2sp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutNRCDistUpz"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">


            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsDist"
                android:text="@string/NRCClientsDist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:drawSelectorOnTop="true"
                android:layout_marginBottom="2sp"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/gradient_spinner"
                android:id="@+id/Clients_District"/>

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/ClientsUpazila"
                android:text="@string/NRCClientsUpazila"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:layout_marginBottom="2sp"
                android:ellipsize="start"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/gradient_spinner"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Upazila" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/union_village"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsUnion"
                android:text="@string/NRCClientsUnion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text_color"/>
            <Spinner
                android:layout_marginTop="10sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/gradient_spinner"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Union"
                android:paddingLeft="2sp"/>

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsVillage"
                android:text="@string/NRCClientsVillage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/gradient_spinner"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Village"
                android:paddingLeft="2sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/house"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/layoutbordersimple">
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsHouseNo"
                android:text="@string/ClientsHouseNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/Clients_House_No"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="2"
                android:background="@drawable/edittext_round"
                android:ellipsize="start"
                android:inputType="number"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCNID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/layoutbordersimple"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNrcNRCNID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="3.5"
                android:text="@string/NRCClientsNID"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edNrcNRCNID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="2.5"
                android:background="@drawable/edittext_round"
                android:ellipsize="start"
                android:inputType="number"
                android:paddingLeft="2sp"
                android:maxLength="17"
                android:textSize="20sp" />

            <CheckBox android:id="@+id/checkboxNoNID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/NRCClientsUnknown"
                android:layout_marginTop="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCNotHavingNID"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsNotHavingNID"
                android:text="@string/NRCClientsNIDNotHavingReason"
                android:paddingRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:layout_marginBottom="2sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/gradient_spinner"
                android:id="@+id/ClientsNotHavingNIDSpinner"
                android:entries="@array/missing_reason"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCBRID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/layoutbordersimple"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNrcBRID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="3.5"
                android:text="@string/NRCClientsBRID"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edNrcBRID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="2.5"
                android:background="@drawable/edittext_round"
                android:ellipsize="start"
                android:inputType="number"
                android:paddingLeft="2sp"
                android:maxLength="19"
                android:textSize="20sp" />

            <CheckBox android:id="@+id/checkboxNoBrID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/NRCClientsUnknown"
                android:layout_marginTop="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCNotHavingBRId"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsNotHavingBRId"
                android:text="@string/NRCClientsBRIDNotHavingReason"
                android:paddingRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:layout_marginBottom="2sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/gradient_spinner"
                android:id="@+id/ClientsNotHavingBRIdSpinner"
                android:entries="@array/missing_reason"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/couple_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/layoutbordersimple"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/TextViewClientsMobileNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:text="@string/ClientsMobileNo"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/NrcClients_Mobile_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:background="@drawable/edittext_round"
                android:ems="10"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="2sp"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:layout_weight="1">

                <ImageView android:id="@+id/imageViewAddNewMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_input_add"/>
            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMobileAlternate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/layoutbordersimple"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textViewMobileAlternate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:text="@string/NRCClientsMobile2"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextNRCClientMobileAlternate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:background="@drawable/edittext_round"
                android:ellipsize="start"
                android:ems="10"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="11"
                android:paddingLeft="2sp"
                android:textSize="20sp"
                android:singleLine="true" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCEducation"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsEducation"
                android:text="@string/NRCClientsEducation"
                android:paddingRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:layout_marginBottom="2sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_spinner"
                android:id="@+id/ClientsEducationSpinner"
                android:entries="@array/education"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCOccupation"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsOccupation"
                android:text="@string/NRCClientsProfession"
                android:paddingRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:layout_marginBottom="2sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_spinner"
                android:id="@+id/ClientsOccupationSpinner"
                android:entries="@array/occupation"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCMemberCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/layoutbordersimple"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewClientsMemberCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="4"
                android:text="@string/NRCClientsMemberCount"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Clients_MemberCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="0.5"
                android:background="@drawable/edittext_round"
                android:ellipsize="start"
                android:inputType="number"
                android:maxLength="2"
                android:paddingLeft="2sp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextViewClientsReligion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="1.5"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="@string/NRCClientsReligion"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/ClientsReligionSpinner"
                android:layout_marginBottom="2sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="2"
                android:background="@drawable/gradient_spinner"
                android:drawSelectorOnTop="true"
                android:entries="@array/religion"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNRCChild"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/textViewClientsChild"
                android:text="@string/NRCClientsHHOtherMember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/text_color"/>


            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="textCapCharacters"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Member"
                android:enabled="false"
                android:visibility="gone"
                android:paddingLeft="2sp"/>

            <Button
                android:id="@+id/nrcOtherMemberView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:ellipsize="start"
                android:onClick="onClick"
                android:padding="5dp"
                android:layout_margin="3dp"
                android:text="@string/view" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />
            <Button
                android:id="@+id/nrcAddOtherMember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:ellipsize="start"
                android:onClick="onClick"
                android:padding="5dp"
                android:paddingLeft="2sp"
                android:paddingRight="10sp"
                android:drawableLeft="@android:drawable/ic_input_add"
                android:text="@string/add" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />
            <Button
                android:id="@+id/nrcDeleteOtherMember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:ellipsize="start"
                android:onClick="onClick"
                android:padding="5dp"
                android:paddingLeft="2sp"
                android:paddingRight="10sp"
                android:drawableLeft="@android:drawable/ic_menu_delete"
                android:text="@string/delete" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNationalityWithSaving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/layoutbordersimple"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <CheckBox android:id="@+id/checkBoxNationality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:checked="true"
                android:textSize="20sp"
                android:text="@string/NRCClientsNationality"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/nrcProceed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:ellipsize="start"
                android:onClick="onClickSaveNRC"
                android:padding="5dp"
                android:paddingLeft="2sp"
                android:paddingRight="10sp"
                android:text="SAVE" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/nrcCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:ellipsize="start"
                android:onClick="onClickCancelNRC"
                android:text="Cancel"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>




