<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:id="@+id/anc_layout_main"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/rowHeading">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/ancBlanLabelLabel"
            style="@style/rowHeading"
            android:drawableLeft="@android:drawable/arrow_down_float"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ancBlanLabelLabel"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_anc_history"
            android:id="@+id/ancHistoryLabel"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/modifyLastAncButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODIFY LAST SERVICE"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:visibility="invisible"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history_lay_anc"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#F3F3F3">


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/anchistory_fragment"
            android:name="org.sci.rhis.fwc.GenericHistoryFragment"
            tools:layout="@layout/fragment_generic_history"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:id="@+id/ancEntryMasterLayout"
        android:layout_weight="9"
        >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/rowHeading"
            android:text="@string/title_activity_anc"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/ancLabelButton"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ancVisitDates"
            android:background="@drawable/layoutborder"
            android:layout_gravity="fill_horizontal">
            <TableRow>
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:background="@drawable/textviewback"
                    android:text="@string/Visit1"
                    android:textSize="13sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="1sp"
                    android:padding="2sp"/>
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:background="@drawable/textviewback"
                    android:text="@string/Visit2"
                    android:textSize="13sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:padding="2sp"/>
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:background="@drawable/textviewback"
                    android:text="@string/Visit3"
                    android:textSize="13sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:padding="2sp"/>
                <TextView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:background="@drawable/textviewback"
                    android:text="@string/Visit4"
                    android:textSize="13sp"
                    android:layout_marginLeft="1sp"

                    android:padding="2sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/ancVisit1Date"
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:background="@drawable/textviewback"
                    android:textSize="13sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:padding="2sp"/>
                <TextView
                    android:id="@+id/ancVisit2Date"
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:background="@drawable/textviewback"
                    android:textSize="13sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:padding="2sp"/>
                <TextView
                    android:id="@+id/ancVisit3Date"
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:background="@drawable/textviewback"
                    android:textSize="13sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_marginTop="1sp"
                    android:padding="2sp"/>
                <TextView
                    android:id="@+id/ancVisit4Date"
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:background="@drawable/textviewback"
                    android:textSize="13sp"
                    android:layout_marginLeft="1sp"
                    android:layout_marginTop="1sp"
                    android:padding="2sp"/>
            </TableRow>
        </TableLayout>

        <ScrollView
            android:id="@+id/ancLayoutScrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ancText"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="5sp"
                android:paddingBottom="5sp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:background="@drawable/fragmentborder">

                <LinearLayout
                    android:id="@+id/ancVisit"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/ancVisitLabel"
                        android:text="@string/visit"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/text_color"  />
                    <TextView
                        android:id="@+id/ancVisitValue"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_width="30sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="5sp"
                        android:textColor="@color/text_color" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ancOtherVisitLL"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <CheckBox
                        android:id="@+id/ancOtherCheckBox"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="40sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp" />
                    <TextView
                        android:id="@+id/ancOtherVisit"
                        android:text="@string/other_source"
                        android:textSize="20sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="5sp"
                        android:textColor="@color/text_color"  />

                    <Spinner
                        android:id="@+id/ancOtherCenterNameSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="280sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="5sp"
                        android:entries="@array/FacilityType_DropDown"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ancServiceDate"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancServiceDateLabel"
                        android:text="@string/service_date"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/ancServiceDateValue"
                        android:inputType="date"
                        android:hint="dd/mm/yyyy"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/Date_Picker_Button"
                        android:layout_marginLeft="10sp"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:onClick="pickDate"
                        android:src="@drawable/calendar_icon"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ancDrawback"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancDrawbackLabel"
                        android:text="@string/drawback"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/ancSymptomSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ancBloospresser"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancBloospresserLabel"
                        android:text="@string/blood_presser"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <EditText
                        android:id="@+id/ancBloodPresserValueSystolic"
                        android:inputType="number"
                        android:textSize="20sp"
                        android:paddingLeft="2sp"
                        android:layout_width="80sp"
                        android:maxLength="3"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"/>
                    <TextView
                        android:id="@+id/ancBloodPresserLabelMid"
                        android:text=" / "
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <EditText
                        android:id="@+id/ancBloodPresserValueDiastolic"
                        android:inputType="number"
                        android:textSize="20sp"
                        android:paddingLeft="2sp"
                        android:layout_width="80sp"
                        android:maxLength="3"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ancWeight"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancWeightLabel"
                        android:text="@string/weight"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center_horizontal" />
                    <EditText
                        android:id="@+id/ancWeightValue"
                        android:inputType="numberDecimal"
                        android:textSize="20sp"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
                <LinearLayout android:id="@+id/ancEdemaLayout" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple" >
                    <TextView
                        android:id="@+id/ancEdemaLabel"
                        android:text="@string/edema"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:padding="2sp" />
                    <Spinner
                        android:id="@+id/ancEdemaSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/Jaundice_Edima_Dropdown"
                        android:padding="2sp" />
                </LinearLayout>
                <LinearLayout android:id="@+id/ancUterusHeight" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/ancUterusHeightLabel"
                        android:text="@string/uterus_height"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <EditText
                        android:id="@+id/ancUterusHeightValue"
                        android:inputType="number"
                        android:textSize="20sp"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:maxLength="2"
                        android:background="@drawable/edittext_round"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ancHeartSpeed" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancHeartSpeedLabel"
                        android:text="@string/heart_speed"
                        android:textSize="20sp"
                        android:layout_width="330sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color" />
                    <EditText
                        android:id="@+id/ancHeartSpeedValue"
                        android:inputType="number"
                        android:textSize="20sp"
                        android:layout_width="70sp"
                        android:maxLength="3"
                        android:paddingLeft="2sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ancFetalPresentationLayout" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancFetalPresentationLabel"
                        android:text="@string/fetal_presentation"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color" />
                    <Spinner
                        android:id="@+id/ancFetalPresentationSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/Abnormality_Dropdown"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ancAnemia" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancAnemiaLabel"
                        android:text="@string/anemia"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <Spinner
                        android:id="@+id/ancAnemiaSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:paddingLeft="2sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/Anemia_Dropdown"
                        android:background="@drawable/gradient_spinner"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ancHemoglobin" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancHemoglobinLabel"
                        android:text="@string/hemoglobin"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <EditText
                        android:id="@+id/ancHemoglobinValue"
                        android:inputType="number"
                        android:textSize="20sp"
                        android:paddingLeft="2sp"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:maxLength="2"
                        android:background="@drawable/edittext_round"/>
                    <TextView
                        android:id="@+id/pncHemoglobinLabelp"
                        android:text=" %"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ancJaundiceLayout" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancJaundiceLabel"
                        android:text="@string/jaundice"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <Spinner
                        android:id="@+id/ancJaundiceSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/Jaundice_Edima_Dropdown"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ancUrineSugarLayout" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancUrineSugarLabel"
                        android:text="@string/urine_test_sugar"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <Spinner
                        android:id="@+id/ancUrineSugarSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/Urine_Test_Dropdown"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ancUrineAlbuminLayout" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancUrineAlbuminLabel"
                        android:text="@string/urine_test_albumin"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <Spinner
                        android:id="@+id/ancUrineAlbuminSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/Urine_Test_Dropdown"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ancDangerSigns" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancDangerSignsLabel"
                        android:text="@string/complication"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/ancComplicationSpinner"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner" />
                </LinearLayout>
                <LinearLayout android:id="@+id/ancDisease" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancDiseaseLabel"
                        android:text="@string/disease" android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/ancDiseaseSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner" />
                </LinearLayout>
                <LinearLayout android:id="@+id/ancTreatment"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancTreatmentLabel"
                        android:text="@string/treatment"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color" />
                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/ancTreatmentSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner" />
                </LinearLayout>
                <LinearLayout android:id="@+id/ancAdvice"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/ancAdviceLabel"
                        android:text="@string/advice"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/ancAdviceSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner" />
                </LinearLayout>
                <LinearLayout android:id="@+id/ancRefer"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp">

                    <TextView
                        android:id="@+id/ancReferLabel"
                        android:text="@string/refer"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <CheckBox
                        android:id="@+id/ancReferCheckBox"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ancReferCenterNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/ancReferCenterNameLabel"
                        android:text="@string/center_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:visibility="invisible"/>
                    <Spinner
                        android:id="@+id/ancReferCenterNameSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/FacilityType_DropDown"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ancReasonLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:padding="2sp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/ancReasonLabel"
                        android:text="@string/reason"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:visibility="invisible"/>
                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/ancReasonSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ancButton" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <Button
                        android:id="@+id/ancSaveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"/>
                    <Button
                        android:id="@+id/ancEditButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:visibility="gone"
                        android:onClick="onClick"/>
                    <Button
                        android:id="@+id/ancDeleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/ancCancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>

