                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudReferTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/refer"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/iudReferCheckBox"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iudReferCenterNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudReferCenterNameTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/center_name"
                        android:textColor="@color/text_color"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/iudReferCenterNameSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/FacilityType_DropDown"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iudReasonLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudChildReasonLabel"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/reason"
                        android:textColor="@color/text_color"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/iudChildReasonSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:visibility="gone" />
                </LinearLayout>

                <!--iud monitoring officer segment...........................................-->
                <LinearLayout
                    android:id="@+id/iudMonitoringOfficerLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/iudMonitoringOfficerTextView"
                        android:text="@string/monitoring_officer_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/iudMonitoringOfficerEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:enabled="false"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iudMonitorCommentLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/iudMonitorCommentTextView"
                        android:text="@string/monitoring_officer_comment"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/iudMonitorCommentEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:inputType="text"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center"
                        android:enabled="false"
                        android:gravity="top|right"/>
                </LinearLayout>



                <!--iud button segment.............................-->
                <LinearLayout android:id="@+id/iudButtonLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <Button
                        android:id="@+id/iudFollowupSaveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"/>
                    <Button
                        android:id="@+id/iudFollowupEditButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:visibility="gone"
                        android:onClick="onClick"/>

                    <Button
                        android:id="@+id/iudFollowupDeleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/iudFollowupEdiCancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
