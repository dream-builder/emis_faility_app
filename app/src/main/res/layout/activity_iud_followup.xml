<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iud_followup_main_layout"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/iudFollowupHeaderLayout"
        style="@style/rowHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/iudFOllowupBlanLabelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@android:drawable/arrow_down_float"
            android:text="" />

        <TextView
            android:id="@+id/ancHistoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/iudFOllowupBlanLabelLabel"
            android:text="@string/topTextIUDServiceHistory"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/modifyLastIUDFollowupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:text="MODIFY LAST SERVICE"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout android:id="@+id/history_lay_iud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#F3F3F3">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/iudHistory_fragment"
            android:name="org.sci.rhis.fwc.GenericHistoryFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_generic_history" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iudFollowupEntryMasterLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/rowHeading"
            android:text="@string/topTextIudFollowup"
            android:id="@+id/iudLabelButton"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color"/>

        <LinearLayout
            android:id="@+id/iudFollowupDateRanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/layoutborder">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:text="@string/followup1"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:text="@string/followup2"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:text="@string/followup3"
                android:textColor="@color/text_color"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iudFolloupDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/layoutborder">

            <TextView
                android:id="@+id/iudFollowup1Date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="1sp"
                android:layout_marginTop="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/iudFollowup2Date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="1sp"
                android:layout_marginTop="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/iudFollowup3Date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="1sp"
                android:layout_marginTop="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:textColor="@color/text_color"
                android:textSize="15sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/iudLayoutScrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/iudTextLayout"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="5sp"
                android:paddingBottom="5sp"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fragmentborder">

                <LinearLayout
                    android:id="@+id/iudFollowup"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/iudFollowupLabel"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"  />
                    <TextView
                        android:id="@+id/iudFollowupValueTextView"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_width="30sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        android:visibility="gone"
                        android:textColor="@color/text_color" />
                    <!--<CheckBox
                        android:id="@+id/iudIsFixedCheckBox"
                        android:layout_marginLeft="150sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:gravity="center_vertical"
                        android:text="@string/fixed"
                        android:visibility="gone"
                        android:textSize="20sp" />-->
                    <TextView
                        android:id="@+id/iudFFCountTextView"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_width="30sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        android:textColor="@color/text_color" />
                </LinearLayout>

                <!--followup date segment...........................................-->
                <LinearLayout
                    android:id="@+id/iudFollowupDateLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/iudFollowupDateTextView"
                        android:text="@string/followup_date"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/iudFollowupDateEditText"
                        android:hint="dd/mm/yyyy"
                        android:enabled="false"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/iudFollowupDatePickerButton"
                        android:layout_marginLeft="10sp"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:onClick="pickDate"
                        android:src="@drawable/calendar_icon"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--followup allowance segment...........................................-->
                <LinearLayout
                    android:id="@+id/iudFollowupAllowanceLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">

                    <CheckBox
                        android:id="@+id/iudFollowupAllowanceGivenCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="@string/client_followup_allowance_given"
                        android:textSize="20sp" />
                    <!--<TextView
                        android:id="@+id/iudFollowupAllowanceTextView"
                        android:text="@string/iud_followup_allowance"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/iudFollowupAllowanceEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />-->
                </LinearLayout>

                <!--client name segment...........................................-->
                <LinearLayout
                    android:id="@+id/iudClientNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/iudClientNameTextView"
                        android:text="@string/client_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/iudClientNameEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"
                        android:enabled="false"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iudFollowupMyselfLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/iudFollowupMyselfLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="@string/followup_attendant_myself"
                        android:textSize="20sp"
                        android:textColor="@color/text_color" />
                    <CheckBox
                        android:id="@+id/iudFollowupMyselfCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--followup attendant's name segment...........................................-->
                <LinearLayout
                    android:id="@+id/iudFollowupAttendantNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/iudFollowupAttendantNameTextView"
                        android:text="@string/followup_attendant_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/iudFollowupAttendantNameEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--complicacy segment.............................-->
                <LinearLayout
                    android:id="@+id/iudComplicacyLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudComplicacyTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/drawback"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/iudComplicacySpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--treatment name segment.............................-->
                <LinearLayout
                    android:id="@+id/iudTreatmentLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudTreatmentTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/treatment"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/iudFollowupTreatmentSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--management name segment.............................-->
                <LinearLayout
                    android:id="@+id/iudManagement"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudManagementLabel"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/management"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/iudManagementSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iudRemoveLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudRemoveTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/iud_is_remove"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/iudRemoveCheckBox"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--iud remover's name segment...........................................-->
                <LinearLayout
                    android:id="@+id/iudRemoverNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/iudRemoverNameTextView"
                        android:text="@string/iud_remover_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/iudRemoverNameEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />

                    <CheckBox
                        android:id="@+id/iudRemoveMyselfCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/providerSelfRemover"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--iud remover's designation segment.............................-->
                <LinearLayout
                    android:id="@+id/iudRemoverDesignationLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudRemoverDesignationTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/iud_remover_designation"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/iudRemoverDesignationSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/IUDRemoverDesignation_DropDown"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--iud remove date segment...........................................-->
                <LinearLayout
                    android:id="@+id/iudRemoveDateLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/iudRemoveDateTextView"
                        android:text="@string/iud_remove_date"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/iudRemoveDateEditText"
                        android:hint="dd/mm/yyyy"
                        android:enabled="false"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/iudRemoveDatePickerButton"
                        android:layout_marginLeft="10sp"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:onClick="pickDate"
                        android:src="@drawable/calendar_icon"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--iud remove reason segment.............................-->
                <LinearLayout
                    android:id="@+id/iudRemoveReasonLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudRemoveReasonTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/iud_remove_reason"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/iudRemoveReasonSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--iud fp method is given segment.............................-->
                <LinearLayout
                    android:id="@+id/iudFPMethodGivenLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudFPMethodGivenTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/fp_method_is_given"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/iudFPMethodGivenCheckBox"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--iud fp method name segment.............................-->
                <LinearLayout
                    android:id="@+id/iudFPMethodLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/iudFPMethodTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/fp_methods"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/iudFPMethodSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/Family_Planning_Methods_DropDown"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--iud fp amount segment...........................................-->
                <LinearLayout
                    android:id="@+id/iudFPAmountLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/iudFPAmountTextView"
                        android:text="@string/amount"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/iudFPAmountEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
