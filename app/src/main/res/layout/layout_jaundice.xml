            android:id="@+id/childcaresymptom26TextviewLabel"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/childcaresymptom26"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <RadioGroup
            android:layout_toRightOf="@id/childcaresymptom26TextviewLabel"
            android:id="@+id/childcaresymptom26RadioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <RadioButton
                android:id="@+id/childcaresymptom26RadioGroupYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="@string/general_yes" />

            <RadioButton
                android:id="@+id/childcaresymptom26RadioGroupNo"
                android:layout_width="wrap_content"
