                            <!--android:id="@+id/pmsCompanionWardSpinner"-->
                            <!--android:paddingLeft="2sp"/>-->

                        <!---->
                    <!--</LinearLayout>-->

                    <LinearLayout
                        android:id="@+id/pms_companion_mobile"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pms_companion_union_village"
                        android:background="@drawable/layoutbordersimple">

                        <TextView
                            android:textSize="20sp"
                            android:layout_marginTop="10sp"
                            android:id="@+id/TextViewCompanionMobileNo"
                            android:text="@string/ClientsMobileNo"
                            android:layout_width="105sp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"/>

                        <EditText
                            android:layout_marginTop="10sp"
                            android:textSize="20sp"
                            android:layout_width="130sp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_round"
                            android:id="@+id/Companion_Mobile_no"
                            android:paddingLeft="2sp"
                            style="@style/styleEdittext"
                            android:inputType="phone"
                            android:padding="2dp"
                            android:ems="10"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:minLines="1"
                            />


                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>

            <!--Client Allowance Segment-->
            <LinearLayout
                android:id="@+id/pmsCompanionAllowanceLayout"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layoutbordersimple"
                android:layout_gravity="center_horizontal"
                android:padding="2sp">

                <CheckBox
                    android:id="@+id/pmsCompanionAllowanceGivenCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/companion_allowance_given_pms"
                    android:textSize="20sp" />

            </LinearLayout>

            <!--Client Allowance Segment-->
            <LinearLayout
                android:id="@+id/pmsClientAllowanceLayout"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layoutbordersimple"
                android:layout_gravity="center_horizontal"
                android:padding="2sp">

                <CheckBox
                    android:id="@+id/pmsClientAllowanceGivenCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/client_allowance_given_pms"
                    android:textSize="20sp" />

            </LinearLayout>

            <!--Client Cloth Segment-->
            <LinearLayout
                android:id="@+id/pmsClientClothLayout"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layoutbordersimple"
                android:layout_gravity="center_horizontal"
                android:padding="2sp">

                <CheckBox
                    android:id="@+id/pmsClientClothGivenCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="@string/sharee_given"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--Refer Layout-->
            <LinearLayout
                android:id="@+id/pmsReferLayout"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layoutbordersimple">

                <TextView
                    android:id="@+id/pmsReferTextView"
                    android:layout_width="220sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0sp"
                    android:text="@string/refer"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/pmsReferCheckBox"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0sp"
                    android:inputType="text"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--Refer Center Name Layout-->
            <LinearLayout
                android:id="@+id/pmsReferCenterNameLayout"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layoutbordersimple">

                <TextView
                    android:id="@+id/pmsReferCenterNameTextView"
                    android:layout_width="220sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0sp"
                    android:text="@string/center_name"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/pmsReferCenterNameSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0sp"
                    android:background="@drawable/gradient_spinner"
                    android:entries="@array/PM_FacilityType_DropDown"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!--Refer Reason Layout-->
            <LinearLayout
                android:id="@+id/pmsReasonLayout"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layoutbordersimple">

                <TextView
                    android:id="@+id/pmsReferReasonLabel"
                    android:layout_width="220sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0sp"
                    android:text="@string/reason"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <org.sci.rhis.fwc.MultiSelectionSpinner
                    android:id="@+id/pmsReferReasonSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0sp"
                    android:background="@drawable/gradient_spinner"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!--pms button segment.............................-->
            <LinearLayout android:id="@+id/injectableButtonLayout"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layoutbordersimple">
                <Button
                    android:id="@+id/pmsSaveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:onClick="onClick"/>
                <Button
                    android:id="@+id/pmsAddNewButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:visibility="gone"
                    android:onClick="onClick"/>
                <Button
                    android:id="@+id/pmsFollowupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow-Up"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:visibility="gone"
                    android:onClick="onClick"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>