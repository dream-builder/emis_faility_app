<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/injectable_activity_main"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/rowHeading">
        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/injectableBlancLabelLabel"
            android:drawableLeft="@android:drawable/arrow_down_float"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/injectableBlancLabelLabel"
            android:text="@string/topTextInjectableServiceHistory"
            android:id="@+id/injecatbleHistoryLabel"
            android:layout_centerVertical="true" />
        <Button
            android:id="@+id/modifyLastInjectableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODIFY LAST SERVICE"
            android:onClick="onClick"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history_lay_injectable"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#F3F3F3">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/injectableHistory_fragment"
            android:name="org.sci.rhis.fwc.InjectableHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_injectable_history" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/injectableEntryMasterLayout">

        <LinearLayout
            android:id="@+id/client_info_title"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/rowHeading">

            <TextView
                android:id="@+id/RegLabel"
                android:gravity="start"
                android:layout_gravity="center"
                android:text="@string/reg_no"
                android:layout_width="0sp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="2" />
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:id="@+id/injectableRegNoTextView"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:paddingLeft="1sp"
                android:textSize="20sp"
                android:layout_weight="4" />

            <TextView
                android:id="@+id/TextViewClient_info_tab"
                android:layout_gravity="center"
                android:text="@string/title_injectables"
                android:layout_width="0sp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="4" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:id="@+id/injectableCollapsibleButton"
                    android:layout_centerHorizontal="true"
                    android:onClick="onClick"
                    android:src="@android:drawable/ic_menu_more"/>
            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/injectLayoutScrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/injectableTextLayout"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="5sp"
                android:paddingBottom="5sp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fragmentborder">

                <LinearLayout
                    android:id="@+id/injectableVisit"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/injectableVisitLabel"
                        android:text="@string/visit"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/text_color"  />
                    <TextView
                        android:id="@+id/injectableVisitValueTextView"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_width="30sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="5sp"
                        android:textColor="@color/text_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/injectableIsNewClientLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">

                    <TextView
                        android:id="@+id/injectableIsNewLabel"
                        android:text="@string/client_status"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>

                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:id="@+id/injectableIsNewRadioGroup">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            android:text="@string/new_client"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:id="@+id/injectableIsNewRadioButton" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="@string/old_client"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:id="@+id/injectableIsOldRadioButton" />
                    </RadioGroup>

                </LinearLayout>


                <!--weight segment...........................................-->
                <LinearLayout
                    android:id="@+id/injectableWeightLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/injectableWeightTextViewf"
                        android:text="@string/weight"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/injectableWeightEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--pulse segment...........................................-->
                <LinearLayout
                    android:id="@+id/injectablePulseLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/injectablePulseTextViewf"
                        android:text="@string/pulse"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/injectablePulseEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--blood pressure segment...........................................-->
                <LinearLayout
                    android:id="@+id/injectableBPLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/injectableBPTextView"
                        android:text="@string/blood_presser"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <EditText
                        android:id="@+id/injectableBPSystolicEditText"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="20sp"
                        android:paddingLeft="2sp"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"/>
                    <TextView
                        android:id="@+id/injectableBPSystolicMidTextView"
                        android:text=" / "
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"/>
                    <EditText
                        android:id="@+id/injectableBPDiastolicEditText"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="20sp"
                        android:paddingLeft="2sp"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"/>
                </LinearLayout>

                <!--breast Condition segment...........................................-->
                <LinearLayout
                    android:id="@+id/injectableBreastConditionLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/injectableBreastConditionLabel"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/breast_lump"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/injectableBreastConditionSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/YesNoLong_Dropdown"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--PV segment...........................................-->
                <LinearLayout
                    android:id="@+id/injectablePVSegment"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:padding="5sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fragmentborder">

                    <TextView
                        android:id="@+id/injectablePVSegmentLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pv_exam"
                        android:textStyle="bold"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <!--Uterus Shape Condition segment...........................................-->
                    <LinearLayout
                        android:id="@+id/injectableUterusShapeLayout"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layoutbordersimple">

                        <TextView
                            android:id="@+id/injectableUterusShapeTextView"
                            android:layout_width="210sp"
                            android:layout_height="wrap_content"
                            android:text="@string/uterus_size"
                            android:textColor="@color/text_color"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/injectableUterusShapeSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:background="@drawable/gradient_spinner"
                            android:entries="@array/Uterus_Shape_DropDown"
                            android:inputType="text"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <!--uterus position Condition segment...........................................-->
                    <LinearLayout
                        android:id="@+id/injectableUterusPositionLayout"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layoutbordersimple">

                        <TextView
                            android:id="@+id/injectableUterusPositionTextView"
                            android:layout_width="210sp"
                            android:layout_height="wrap_content"
                            android:text="@string/uterus_position"
                            android:textColor="@color/text_color"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/injectableUterusPositionSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:background="@drawable/gradient_spinner"
                            android:entries="@array/Uterus_Position_DropDown"
                            android:inputType="text"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <!--uterus movement segment.............................-->
                    <LinearLayout
                        android:id="@+id/injectableUterusMovementLayout"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layoutbordersimple">

                        <TextView
                            android:id="@+id/injectableUterusMovementTextView"
                            android:layout_width="210sp"
                            android:layout_height="wrap_content"
                            android:text="@string/uterus_movement"
                            android:textColor="@color/text_color"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/injectableUterusMovementSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:background="@drawable/gradient_spinner"
                            android:entries="@array/Uterus_Movement_DropDown"
                            android:inputType="text"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <!--uterus movement pain segment.............................-->
                    <LinearLayout
                        android:id="@+id/injectableUterusMovementPainLayout"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layoutbordersimple">

                        <TextView
                            android:id="@+id/injectableUterusMovementPainTextView"
                            android:layout_width="210sp"
                            android:layout_height="wrap_content"
                            android:text="@string/uterus_movement_pain"
                            android:textColor="@color/text_color"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/injectableUterusMovementPainSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:background="@drawable/gradient_spinner"
                            android:entries="@array/Uterus_Movement_Pain_DropDown"
                            android:inputType="text"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>



                <!--LMP date segment...........................................-->
                <LinearLayout
                    android:id="@+id/injectableLmpDateLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/injectableLmpDateTextView"
                        android:text="@string/LMPDateNormal"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/injectableLmpDateEditText"
                        android:enabled="false"
                        android:hint="dd/mm/yyyy"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/injectableLmpDatePickerButton"
                        android:layout_marginLeft="10sp"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:onClick="pickDate"
                        android:src="@drawable/calendar_icon"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--previously specified dose date segment...........................................-->
                <LinearLayout
                    android:id="@+id/injectableDueDateLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/injectableDueDateTextViewf"
                        android:text="@string/injection_due_dose_date_text"
                        android:textSize="20sp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <TextView
                        android:id="@+id/injectableDueDateValueTextView"
                        android:textSize="18sp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_gravity="center" />

                    <Button
                        android:id="@+id/injectableWindowPeriodButton"
                        android:paddingLeft="5dp"
                        android:text="@string/window_period"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.Button"
                        android:onClick="showWindowPeriod"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--actual date segment...........................................-->
                <LinearLayout
                    android:id="@+id/injectableActualDateLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/injectableActualDateTextView"
                        android:text="@string/injection_actual_dose_date_text"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/injectableActualDateEditText"
                        android:enabled="false"
                        android:hint="dd/mm/yyyy"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/injectableActualDatePickerButton"
                        android:layout_marginLeft="10sp"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:onClick="pickDate"
                        android:src="@drawable/calendar_icon"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--previously specified dose date segment...........................................-->
                <LinearLayout
                    android:id="@+id/injectableNextDateLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/injectableNextDateTextViewf"
                        android:text="@string/injection_next_dose_date_text"
                        android:textSize="20sp"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <TextView
                        android:id="@+id/injectableNextDateValueTextView"
                        android:text=""
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_green_dark"
                        android:textStyle="bold"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--injection name segment.............................-->
                <LinearLayout
                    android:id="@+id/injectableInjectionNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/injectableInjectionNameTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/injection_name_text"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/injectableInjectionNameSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/Injection_Name_DropDown"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--side effect name segment.............................-->
                <LinearLayout
                    android:id="@+id/injectableSideEffectLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/injectableSideEffectTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/side_effect"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/injectableSideEffectSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--treatment name segment.............................-->
                <LinearLayout
                    android:id="@+id/injectableTreatmentLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/injectableTreatmentTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
