<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/implant_followup_layout_main"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/implantFollowupHeaderLayout"
        style="@style/rowHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/implantFOllowupBlanLabelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@android:drawable/arrow_down_float"
            android:text="" />

        <TextView
            android:id="@+id/ancHistoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/implantFOllowupBlanLabelLabel"
            android:text="@string/topTextImplantServiceHistory"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textStyle="bold" />

        <Button
            android:id="@+id/modifyLastImplantFollowupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:text="MODIFY LAST SERVICE"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout android:id="@+id/history_lay_implant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#F3F3F3">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/implantHistory_fragment"
            android:name="org.sci.rhis.fwc.GenericHistoryFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_generic_history" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/implantFollowupEntryMasterLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/rowHeading"
            android:text="@string/topTextImplantFollowup"
            android:id="@+id/implantLabelButton"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color"/>

        <LinearLayout
            android:id="@+id/implantFollowupDateRanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/layoutborder">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:text="@string/followup1"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:text="@string/followup2"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:text="@string/followup3"
                android:textColor="@color/text_color"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/implantFolloupDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="@drawable/layoutborder">

            <TextView
                android:id="@+id/implantFollowup1Date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="1sp"
                android:layout_marginTop="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/implantFollowup2Date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="1sp"
                android:layout_marginTop="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/implantFollowup3Date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1sp"
                android:layout_marginRight="1sp"
                android:layout_marginTop="1sp"
                android:background="@drawable/textviewback"
                android:padding="2sp"
                android:textColor="@color/text_color"
                android:textSize="15sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/implantLayoutScrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/implantTextLayout"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="5sp"
                android:paddingBottom="5sp"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fragmentborder">

                <LinearLayout
                    android:id="@+id/implantFollowup"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/implantFollowupLabel"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_color"  />
                    <TextView
                        android:id="@+id/implantFollowupValueTextView"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_width="30sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        android:visibility="gone"
                        android:textColor="@color/text_color" />
                    <TextView
                        android:id="@+id/implantFFCountTextView"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_width="30sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        android:textColor="@color/text_color" />
                </LinearLayout>

                <!--followup date segment...........................................-->
                <LinearLayout
                    android:id="@+id/implantFollowupDateLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/implantFollowupDateTextView"
                        android:text="@string/followup_date"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/implantFollowupDateEditText"
                        android:hint="dd/mm/yyyy"
                        android:enabled="false"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/implantFollowupDatePickerButton"
                        android:layout_marginLeft="10sp"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:onClick="pickDate"
                        android:src="@drawable/calendar_icon"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--followup allowance segment...........................................-->
                <LinearLayout
                    android:id="@+id/implantFollowupAllowanceLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">

                    <CheckBox
                        android:id="@+id/implantFollowupAllowanceGivenCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="@string/client_followup_allowance_given"
                        android:textSize="20sp" />
                    <!--<TextView
                        android:id="@+id/implantFollowupAllowanceTextView"
                        android:text="@string/implant_followup_allowance"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/implantFollowupAllowanceEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />-->
                </LinearLayout>

                <!--client name segment...........................................-->
                <LinearLayout
                    android:id="@+id/implantClientNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/implantClientNameTextView"
                        android:text="@string/client_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/implantClientNameEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"
                        android:enabled="false"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/implantFollowupMyselfLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/implantFollowupMyselfLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="@string/followup_attendant_myself"
                        android:textSize="20sp"
                        android:textColor="@color/text_color" />
                    <CheckBox
                        android:id="@+id/implantFollowupMyselfCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--followup attendant's name segment...........................................-->
                <LinearLayout
                    android:id="@+id/implantFollowupAttendantNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/implantFollowupAttendantNameTextView"
                        android:text="@string/followup_attendant_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/implantFollowupAttendantNameEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--complicacy segment.............................-->
                <LinearLayout
                    android:id="@+id/implantComplicacyLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantComplicacyTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/drawback"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/implantComplicacySpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--treatment name segment.............................-->
                <LinearLayout
                    android:id="@+id/implantTreatmentLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantTreatmentTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/treatment"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/implantFollowupTreatmentSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--management name segment.............................-->
                <LinearLayout
                    android:id="@+id/implantManagement"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantManagementLabel"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/management"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/implantManagementSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/implantRemoveLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantRemoveTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/implant_is_remove"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/implantRemoveCheckBox"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--implant remover's name segment...........................................-->
                <LinearLayout
                    android:id="@+id/implantRemoverNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/implantRemoverNameTextView"
                        android:text="@string/implant_remover_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/implantRemoverNameEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />

                    <CheckBox
                        android:id="@+id/implantRemoveMyselfCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/providerSelfRemover"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--implant remover's designation segment.............................-->
                <LinearLayout
                    android:id="@+id/implantRemoverDesignationLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantRemoverDesignationTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/implant_remover_designation"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/implantRemoverDesignationSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/ImplantRemoverDesignation_DropDown"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--implant remove date segment...........................................-->
                <LinearLayout
                    android:id="@+id/implantRemoveDateLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/implantRemoveDateTextView"
                        android:text="@string/implant_remove_date"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/implantRemoveDateEditText"
                        android:hint="dd/mm/yyyy"
                        android:enabled="false"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/implantRemoveDatePickerButton"
                        android:layout_marginLeft="10sp"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:onClick="pickDate"
                        android:src="@drawable/calendar_icon"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--implant remove reason segment.............................-->
                <LinearLayout
                    android:id="@+id/implantRemoveReasonLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantRemoveReasonTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/implant_remove_reason"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/implantRemoveReasonSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--implant fp method is given segment.............................-->
                <LinearLayout
                    android:id="@+id/implantFPMethodGivenLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantFPMethodGivenTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/fp_method_is_given"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/implantFPMethodGivenCheckBox"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--implant fp method name segment.............................-->
                <LinearLayout
                    android:id="@+id/implantFPMethodLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantFPMethodTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:text="@string/fp_methods"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/implantFPMethodSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/Family_Planning_Methods_DropDown"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--implant fp amount segment...........................................-->
                <LinearLayout
                    android:id="@+id/implantFPAmountLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/implantFPAmountTextView"
                        android:text="@string/amount"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/implantFPAmountEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/implantReferLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantReferTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/refer"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/implantReferCheckBox"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:inputType="text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/implantReferCenterNameLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantReferCenterNameTextView"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/center_name"
                        android:textColor="@color/text_color"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/implantReferCenterNameSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:entries="@array/FacilityType_DropDown"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:visibility="gone" />
                </LinearLayout>
                <!--TODO: Temporary fastest hiding of refer reason, need to remove in proper way-->
                <LinearLayout
                    android:id="@+id/implantReasonLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/layoutbordersimple">

                    <TextView
                        android:id="@+id/implantChildReasonLabel"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:text="@string/reason"
                        android:textColor="@color/text_color"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/implantChildReasonSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/gradient_spinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:visibility="gone" />
                </LinearLayout>

                <!--implant monitoring officer segment...........................................-->
                <LinearLayout
                    android:id="@+id/implantMonitoringOfficerLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/implantMonitoringOfficerTextView"
                        android:text="@string/monitoring_officer_name"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/implantMonitoringOfficerEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:enabled="false"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/implantMonitorCommentLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple"
                    android:layout_gravity="center_horizontal"
                    android:padding="2sp">
                    <TextView
                        android:id="@+id/implantMonitorCommentTextView"
                        android:text="@string/monitoring_officer_comment"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_gravity="center" />
                    <EditText
                        android:id="@+id/implantMonitorCommentEditText"
                        android:paddingLeft="2sp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:inputType="text"
                        android:background="@drawable/edittext_round"
                        android:layout_gravity="center"
                        android:enabled="false"
                        android:gravity="top|right"/>
                </LinearLayout>



                <!--implant button segment.............................-->
                <LinearLayout android:id="@+id/implantButtonLayout"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <Button
                        android:id="@+id/implantFollowupSaveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"/>
                    <Button
                        android:id="@+id/implantFollowupEditButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:visibility="gone"
                        android:onClick="onClick"/>

                    <Button
                        android:id="@+id/implantFollowupDeleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/implantFollowupEdiCancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textSize="18sp"
                        android:textColor="@color/text_color"
                        android:onClick="onClick"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>